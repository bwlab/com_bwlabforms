<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset
        name="attributes"
        label="BWLAB_FORMS_CONFIG_MAIN">
        <field
            name="name"
            type="text"
            label="BWLAB_FORMS_FIELD_NAME"
            description="BWLAB_FORMS_FIELD_NAME_DESC"
            required="true"
        >
        </field>
        <field
            name="label"
            type="text"
            label="BWLAB_FORMS_FIELD_LABEL"
            description="BWLAB_FORMS_FIELD_LABEL_DESC"
            required="true"
        >
        </field>
        <field
            name="published"
            type="radio"
            default="1"
            label="BWLAB_FORMS_FIELD_PUBLISHED"
            description="BWLAB_FORMS_FIELD_PUBLISHED_DESC"
            filter="integer">
            <option
                value="1">JYES
            </option>
            <option
                value="0">JNO
            </option>
        </field>
        <field
            name="mandatory"
            type="checkbox"
            default="0"
            label="BWLAB_FORMS_FIELD_REQUIRED"
            description="BWLAB_FORMS_FIELD_REQUIRED_DESC"
            filter="integer">
        </field>
        <field
            name="readonly"
            type="checkbox"
            default="0"
            label="BWLAB_FORMS_FIELD_READONLY"
            description="BWLAB_FORMS_FIELD_READONLY_DESC"
        >
        </field>
        <field
            name="custominfo"
            type="text"
            default=""
            label="BWLAB_FORMS_FIELD_CUSTOMINFO"
            description="BWLAB_FORMS_FIELD_CUSTOMINFO_DESC"
        >
        </field>
        <field
            name="customerror"
            type="text"
            default=""
            label="BWLAB_FORMS_FIELD_CUSTOMERROR"
            description="BWLAB_FORMS_FIELD_CUSTOMERROR_DESC"
        >
        </field>
    </fieldset>
</form>

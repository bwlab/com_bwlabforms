<?xml version="1.0" encoding="utf-8"?>
<form name="standard">
    <fieldset
        name="standard_main"
        label="BWLAB_FORMS_STANDARD_MAIN">
        <field
            name="name"
            type="text"
            label="BWLAB_FORMS_FIELD_NAME"
            description="BWLAB_FORMS_FIELD_NAME_DESC"
            required="true"
        >
        </field>
        <field
            name="label"
            type="text"
            label="BWLAB_FORMS_FIELD_LABEL"
            description="BWLAB_FORMS_FIELD_LABEL_DESC"
            required="true"
        >
        </field>
        <field
            name="title"
            type="text"
            label="BWLAB_FORMS_FIELD_TITLE"
            description="BWLAB_FORMS_FIELD_TITLE_DESC"
            >
        </field>
        <field
            name="published"
            type="radio"
            default="1"
            label="BWLAB_FORMS_FIELD_PUBLISHED"
            description="BWLAB_FORMS_FIELD_PUBLISHED_DESC"
            filter="integer">
            <option
                value="1">JYES
            </option>
            <option
                value="0">JNO
            </option>
        </field>
        <field
            name="required"
            type="checkbox"
            default="0"
            label="BWLAB_FORMS_FIELD_REQUIRED"
            description="BWLAB_FORMS_FIELD_REQUIRED_DESC"
            filter="integer">
        </field>
        <field
            name="readonly"
            type="checkbox"
            default="0"
            label="BWLAB_FORMS_FIELD_READONLY"
            description="BWLAB_FORMS_FIELD_READONLY_DESC"
            filter="integer">
        </field>
        <field
            name="disabled"
            type="checkbox"
            default="0"
            label="BWLAB_FORMS_FIELD_DISABLED"
            description="BWLAB_FORMS_FIELD_DISABLED_DESC"
            filter="integer">
        </field>
    </fieldset>
    <fieldset name="standard_info" label="BWLAB_FORMS_STANDARD_INFO">
        <field
            name="custominfo"
            type="text"
            default=""
            label="BWLAB_FORMS_FIELD_CUSTOMINFO"
            description="BWLAB_FORMS_FIELD_CUSTOMINFO_DESC"
        >
        </field>
        <field
            name="customerror"
            type="text"
            default=""
            label="BWLAB_FORMS_FIELD_CUSTOMERROR"
            description="BWLAB_FORMS_FIELD_CUSTOMERROR_DESC"
        >
        </field>
    </fieldset>
    <fieldset name="standard_layout" label="BWLAB_FORMS_STANDARD_LAYOUT">
        <field
            name="labelCSSclass"
            type="text"
            default=""
            label="BWLAB_FORMS_FIELD_CLASS_CSS_FOR_LABEL"
            description="BWLAB_FORMS_FIELD_CLASS_CSS_FOR_LABEL_DESC"
        >
        </field>
        <field
            name="fieldCSSclass"
            type="text"
            default=""
            label="BWLAB_FORMS_FIELD_CLASS_CSS_FOR_FIELD"
            description="BWLAB_FORMS_FIELD_CLASS_CSS_FOR_FIELD_DESC"
        />
        <field
            name="customtextCSSclass"
            type="text"
            default=""
            label="BWLAB_FORMS_FIELD_CLASS_CSS_FOR_CUSTOM_TEXT"
            description="BWLAB_FORMS_FIELD_CLASS_CSS_FOR_CUSTOM_TXT_DESC"
        />
    </fieldset>
    <fieldset name="standard_advance" label="BWLAB_FORMS_STANDARD_ADVANCE">
        <field
            name="frontdisplay"
            type="radio"
            default="1"
            label="BWLAB_FORMS_FIELD_FRONTEND_DISPLAY_ADVANCE"
            description="BWLAB_FORMS_FIELD_FRONTEND_DISPLAY_ADVANCE_DESC"
            filter="integer">
            <option
                value="1">JYES
            </option>
            <option
                value="0">JNO
            </option>
        </field>        
        <field name="customtext" 
            type="editor" 
            default="default" 
            label="BWLAB_FORMS_FIELD_FRONTEND_DISPLAY_CUSTOM_TEXT" 
            description="BWLAB_FORMS_FIELD_FRONTEND_DISPLAY_CUSTOM_TEXT_DESC" 
            rows="10" 
            cols="5" 
            filter="safehtml"/>
    </fieldset>
</form>

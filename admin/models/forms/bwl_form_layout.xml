<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="form_config">
        <fieldset
            name="form_general"
            label="BWLAB_FORM_GENERAL"
            show="show">
            <field
                name="name"
                type="text"
                label="BWLAB_FORMS_FORM_NAME"
                description="BWLAB_FORMS_FORM_NAME"
                required="true" />
            <field
                name="title"
                type="text"
                label="BWLAB_FORMS_FORM_TITLE"
                description="BWLAB_FORMS_FORM_TITLE"
                required="true"    />
        
            <field
                name="published"
                type="radio"
                default="1"
                label="BWLAB_FORMS_FORM_PUBLISHED"
                description="BWLAB_FORMS_FORM_PUBLISHED_DESC"
                filter="integer">
                <option
                    value="1">JYES
                </option>
                <option
                    value="0">JNO
                </option>
            </field>
            <field name="description" 
                   type="editor" 
                   default="default" 
                   label="BWLAB_FORMS_FORM_DESCRIPTION" 
                   description="BWLAB_FORMS_FORM_DESCRIPTION_DESC" 
                   rows="10" 
                   cols="5" 
                   filter="raw"/>
        </fieldset>
        <fieldset
            name="form_mail"
            label="BWLAB_FORM_MAiL"
            show="noshow">
            <field
                name="send_mail"
                type="radio"
                default="1"
                label="BWLAB_FORMS_FORM_MAIL_SAVE"
                description="BWLAB_FORMS_FORM_MAIL_SAVE_DESC"
                filter="integer">
                <option
                    value="1">JYES
                </option>
                <option
                    value="0">JNO
                </option>
            </field>
            <field
                name="mail_from"
                type="text"
                label="BWLAB_FORMS_FORM_MAIL_FROM"
                description="BWLAB_FORMS_FORM_MAIL_FROM_DESC"/>
            <field
                name="mail_to"
                type="text"
                label="BWLAB_FORMS_FORM_MAIL_TO"
                description="BWLAB_FORMS_FORM_MAIL_TO_DESC"/>
            <field
                name="mail_cc"
                type="text"
                label="BWLAB_FORMS_FORM_MAIL_CC"
                description="BWLAB_FORMS_FORM_MAIL_CC_DESC"/>
            <field
                name="mail_bcc"
                type="text"
                label="BWLAB_FORMS_FORM_MAIL_BCC"
                description="BWLAB_FORMS_FORM_MAIL_BCC_DESC"/>
            <field
                name="mail_subject"
                type="text"
                label="BWLAB_FORMS_FORM_MAIL_SUBJECT"
                description="BWLAB_FORMS_FORM_MAIL_SUBJECT_DESC"/>
            <field
                name="mail_receipit"
                type="radio"
                default="0"
                label="BWLAB_FORMS_FORM_MAIL_RECEIPIT"
                description="BWLAB_FORMS_FORM_MAIL_RECEIPIT_DESC"
                filter="integer">
                <option
                    value="1">JYES
                </option>
                <option
                    value="0">JNO
                </option>
            </field>
            <field
                name="mail_receipit_subject"
                type="text"
                label="BWLAB_FORMS_FORM_MAIL_RECEIPIT_SUBJECT"
                description="BWLAB_FORMS_FORM_MAIL_RECEIPIT_SUBJECT_DESC"/>
            <field name="mail_receipit_text" 
                   type="editor" 
                   default="default" 
                   label="BWLAB_FORMS_FORM_MAIL_RECEIPIT_TEXT" 
                   description="BWLAB_FORMS_FORM_MAIL_RECEIPIT_TEXT_DESC" 
                   rows="10" 
                   cols="5" 
                   filter="raw"/>
            <field
                name="mail_receipit_include_data"
                type="radio"
                default="0"
                label="BWLAB_FORMS_FORM_MAIL_RECEIPIT_INCLUDE_DATA"
                description="BWLAB_FORMS_FORM_MAIL_RECEIPIT_INCLUDE_DATA_DESC"
                filter="integer">
                <option
                    value="1">JYES
                </option>
                <option
                    value="0">JNO
                </option>
            </field>
            <field
                name="mail_receipit_include_file"
                type="radio"
                default="0"
                label="BWLAB_FORMS_FORM_MAIL_RECEIPIT_INCLUDE_FILE"
                description="BWLAB_FORMS_FORM_MAIL_RECEIPIT_INCLUDE_FILE_DESC"
                filter="integer">
                <option
                    value="1">JYES
                </option>
                <option
                    value="0">JNO
                </option>
            </field>
        </fieldset>
        <fieldset
            name="form_result"
            label="BWLAB_FORM_RESULT"
            show="noshow">
            <field
                name="result_save"
                type="radio"
                default="0"
                label="BWLAB_FORMS_FORM_RESULT_SAVE"
                description="BWLAB_FORMS_FORM_RESULT_SAVE_DESC"
                filter="integer">
                <option
                    value="1">JYES
                </option>
                <option
                    value="0">JNO
                </option>
            </field>
            <field name="result_text" 
                   type="editor" 
                   default="default" 
                   label="BWLAB_FORMS_FORM_RESULT_TEXT" 
                   description="BWLAB_FORMS_FORM_RESULT_TEXT_DESC" 
                   rows="10" 
                   cols="5" 
                   filter="raw"/>
            <field
                name="result_redirect"
                type="radio"
                default="0"
                label="BWLAB_FORMS_FORM_RESULT_REDIRECT"
                description="BWLAB_FORMS_FORM_RESULT_REDIRECT_DESC"
                filter="integer">
                <option
                    value="1">JYES
                </option>
                <option
                    value="0">JNO
                </option>
            </field>

            <field
                name="result_redirect_url"
                type="text"
                label="BWLAB_FORMS_FORM_RESULT_REDIRECT_URL"
                description="BWLAB_FORMS_FORM_RESULT_REDIRECT_URLDESC"/>            
        </fieldset>
        <fieldset
            name="form_advance"
            label="BWLAB_FORM_ADVANCE"
            show="noshow">
            <field
                name="advance_captcha"
                type="radio"
                default="0"
                label="BWLAB_FORMS_FORM_ADVANCE_CAPTCHA"
                description="BWLAB_FORMS_FORM_ADVANCE_CAPTCHA_DESC"
                filter="integer">
                <option
                    value="1">JYES
                </option>
                <option
                    value="0">JNO
                </option>
            </field>
            <field
                name="advance_path_upload"
                type="text"
                label="BWLAB_FORMS_FORM_ADVANCE_PATH_UPLOAD"
                description="BWLAB_FORMS_FORM_ADVANCE_PATH_UPLOAD_DESC"/>            
                
        </fieldset>
    </fields>
</form>
